<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.melardev.tutsnetlibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppTutsNetLibrary"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityRetroFitOAuth">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="tutsnet" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityOkHttpDemo_" />
        <activity android:name=".ActivityRetrofitDemo_" />
        <activity android:name=".ActivityRxJava"></activity>
    </application>

</manifest>