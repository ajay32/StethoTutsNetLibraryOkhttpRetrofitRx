<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.melardev.tutsnetlibrary.ActivityRxJava">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="asyncTaskAsRxJava1"
            android:text="AsyncTask as RxJava1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="asyncTaskAsRxJava2"
            android:text="AsyncTask as RxJava 2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="retrofit2RxJava1"
            android:text="RxJava1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="retrofit2RxJava2"
            android:text="RxJava2" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtRxResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
